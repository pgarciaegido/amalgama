doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
    title Amalgama
    link(rel='stylesheet', href='/css/app.css')
    link(href='https://fonts.googleapis.com/css?family=Fira+Sans:400,700,700i|Roboto:400,700', rel='stylesheet')
  body
    h1 subir nueva imagen
    form(action="/app/imagenes/" + imagen.id + "?_method=PUT" method="POST")
      //- esto del put viene de la libería method override
      input(type="hidden" value="PUT" name="_method") 
      label(for="title") Título
      input(type="text" name="title" id="title", value=imagen.title)
      input(type="submit" value="subir")
