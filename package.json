{
  "name": "amalgama",
  "version": "0.1.0",
  "description": "debate website",
  "main": "server.js",
  "scripts": {
    "test": "standard",
    "start": "node server"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "between-comments"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "max-empty-lines": 2,
      "rule-nested-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s",
        "px",
        "vw",
        "vh"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgarciaegido/amalgama.git"
  },
  "author": "Pablo Egido <pgarciaegido@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgarciaegido/amalgama/issues"
  },
  "homepage": "https://github.com/pgarciaegido/amalgama#readme",
  "devDependencies": {
    "@ashelley/postcss-simple-vars": "^0.3.0-warnings",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.5",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-sourcemaps": "^2.4.0",
    "gulp-stylelint": "^3.6.0",
    "gulp-uglify": "^2.0.0",
    "panini": "^1.3.1",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.2.0",
    "postcss-mixins": "^5.4.0",
    "postcss-nested": "^1.0.0",
    "standard": "^8.6.0",
    "webpack": "^1.14.0",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.15.2",
    "connect-redis": "^3.2.0",
    "cookie-session": "^2.0.0-alpha.2",
    "ejs": "^2.5.6",
    "express": "^4.14.0",
    "express-formidable": "^1.0.0",
    "express-session": "^1.14.2",
    "file-extension": "^3.1.0",
    "fs.extra": "^1.3.2",
    "jquery": "^3.1.1",
    "method-override": "^2.3.7",
    "moment": "^2.17.1",
    "mongodb": "^2.2.18",
    "mongoose": "^4.7.6",
    "multer": "^1.2.1",
    "page": "^1.7.1",
    "pug": "^2.0.0-beta6",
    "yo-yo": "^1.3.1"
  }
}
