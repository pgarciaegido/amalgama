{
  "name": "amalgama",
  "version": "0.1.0",
  "description": "debate website",
  "main": "gulpfile.js",
  "scripts": {
    "test": "standard",
    "start": "gulp default"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "between-comments"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "max-empty-lines": 2,
      "rule-nested-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s",
        "px",
        "vw",
        "vh"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgarciaegido/amalgama.git"
  },
  "author": "Pablo Egido <pgarciaegido@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgarciaegido/amalgama/issues"
  },
  "homepage": "https://github.com/pgarciaegido/amalgama#readme",
  "devDependencies": {
    "@ashelley/postcss-simple-vars": "^0.3.0-warnings",
    "browser-sync": "^2.18.5",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.0",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-stylelint": "^3.6.0",
    "gulp-uglify": "^2.0.0",
    "panini": "^1.3.1",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.2.0",
    "postcss-mixins": "^5.4.0",
    "postcss-nested": "^1.0.0",
    "standard": "^8.6.0",
    "webpack": "^1.14.0",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
